<!-- praise.wxml -->
<scroll-view
    scroll-y="true"
    bindscrolltoupper="upper"
    bindscrolltolower="lower"
    bindscroll="scroll"
    scroll-into-view="{{toView}}"
    scroll-top="{{scrollTop}}"
  >
    <block wx:for="{{post}}" wx:key="key" wx:for-index="idx" wx:for-item="item" data-idx="{{idx}}">
      <view class="feed-item">
        <view class="feed-source">
          <a class="">
            <view class="avatar"><image src="{{item.headimg}}"></image></view>
            <text>{{item.nickname}}</text>
          </a>
        </view>
      <view style="width:100%;height:50rpx;"></view>
      <view class="liuyanview">{{item.message}}</view>
      <view style="width:100%;height:10px;"></view>

      <form bindsubmit="formSubmit">
      <input type="text" name="liuyantext" placeholder='夸一夸' class="input-style"/>
      <input type="text" name="nickname" value='{{nickName}}' style="display:none;"/>
      <input type="text" name="headimg" value='{{avatarUrl}}' style="display:none;"/>
      </form>

      <view style="text-align:center;font-size:14px;color:#ccc;margin-top:20px;">彩虹夸</view>
      <view wx:for="{{liuyanlist}}" wx:key="key" wx:for-item="item" class="liuyanview">  
        <view class="feed-source">
          <a class="">
            <view class="avatar">
            <text>{{item.nickname}}:</text></view>
            <text>{{item.liuyantext}}</text>
          </a>
        </view>  

        <!-- 占位符 -->  
        <view style="width:100%;height:10px;"></view>
      </view>
      <view style="width:100%;height:10px;"></view>
      </view>
    </block>
</scroll-view>
<button class="button-style">我来说一句!</button>