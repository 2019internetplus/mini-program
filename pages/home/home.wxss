.top {
  display: flex;
  flex-flow: row;
  align-items: center;
  padding: 20rpx;
}
.mood {
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.mood .moodtext {
  font-size: 150%;
  margin: 20rpx;
}
.mood .value {
  font-size: 150%;
}
.mood .defaulttext {
  margin: 0 0 0 50rpx ;
  font-size: 80%;
  color: #6d6d6d;
}
.time {
  width: 30%;
  margin: 20rpx;
  position: relative;
}
.time .day {
  font-size: 200%;
  position: absolute;
  left: 0;
  top: 70rpx;
  right: 0;
  bottom: 0;
  text-align: center;
}
