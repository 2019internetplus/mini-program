<view class="home">
  <view class="top">
    <view class="mood">
      <view class="moodtext">今日心情值</view>
      <text wx:if="{{moodvalue}}" class="value">{{value}}</text>
      <text wx:else class="defaulttext">今天还没有记录心情，快点击下面的按钮记录吧(^_−)☆</text>
    </view>
    <view class="time">
      <view wx:if="{{month}}" class="month">{{month}}月</view>
      <view wx:if="{{day}}" class="day">{{day}}</view>
    </view>
  </view>
  <view class="button">
  </view>
  <view class="banner">
    <swiper class="swiper_box" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular='true' bindchange="bindchange" style="height:{{imgheights[current]}}rpx;">
      <block wx:for="{{imgUrls}}" wx:key="{{imgUrls}}">
        <swiper-item>
          <image src="{{item}}"  mode="widthFix" class="slide-image" bindload="imageLoad"/>
        </swiper-item>
      </block>
    </swiper>
  </view>
</view>