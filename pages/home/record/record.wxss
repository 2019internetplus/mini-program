.container{
  margin: 50rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}
.title{
  width: 50%;
  text-align: center;
  font-size: 120%;
  margin: 20rpx;
}
.input_grade{
  width: 50%;
  margin: 20rpx;
  font-size: 120%;
  text-align: center;
  border-radius: 10%;
}
.section{
  margin-top: 50rpx;
}
textarea {
  margin: 10rpx auto;
  padding: 10rpx;
  width: 650rpx;
  border: solid 2rpx #eeeeee;
}
.section button {
  width: 80%;
  margin-top: 80rpx;
  border-radius: 98rpx; 
  background-color: #ffdead;
}
.section button::after {
  border-radius: 98rpx;
}
.hover-class {
  background-color: green;
}