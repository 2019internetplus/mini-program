<view class="container">
  <view class="remind-box" wx:if="{{remind}}">
    <image class="remind-img" src=""></image>
  </view>
  <block wx:else>
    <view class="content">
      <view class="hd" style="transform:rotateZ({{angle}}deg);">
        <image class="logo" src="../../images/start/xinyou2.jpg"></image>
        <image class="wave" src="../../images/start/wave.png" mode="aspectFill"></image>
        <image class="wave wave-bg" src="../../images/start/wave.png" mode="aspectFill"></image>
      </view>
      <view class="bd"> 
        <image class="title" src="../../images/start/xinyou1.png"></image>
        <button class="confirm-btn" bindtap='goToIndex'>点击进入</button>
      </view>
    </view>
  </block>
</view>